<h1> Filtrar Alunos</h1>

<hr />
<div class="container bg-opacity-50 bg-dark">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ResFiltrarAluno">

                <div class="form-group">
                    <label class="control-label">Informe o ID do Aluno</label>
                    <input type="text" name="id" class="form-control" />
                </div>
                <br />

                <div class="form-group">
                    <label class="control-label">Informe o NOME do Aluno</label>
                    <input type="text" name="nome" class="form-control" />
                </div>
                <br />

                <div class="form-group">
                    <label class="control-label">Filtrar Por Período de Aniversário</label>
                    <br />
                    <label class="control-label">Data Inicial</label>
                    <input type="date" name="dataIni" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Data Final</label>
                    <input type="date" name="dataFim" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Filtrar" class="btn btn-primary" />
                </div>

                <br />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}